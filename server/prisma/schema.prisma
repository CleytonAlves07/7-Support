// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Customer {
  id        String @id @default(cuid())
  email     String @unique
  password  String
  name      String 
  cpf       String @unique
  role      String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")

}

model Mechanic {
  id        String @id @default(cuid())
  email     String @unique
  password  String
  name      String 
  cpf       String @unique
  role      String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mechanics")

}

model Manager {
  id        String @id @default(cuid())
  email     String @unique
  password  String
  name      String 
  cpf       String @unique
  role      String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("managers")

}

model Product {
  id            String @id @default(cuid())
  product       String
  description   String
  amount         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orders        ServiceOrder[] @relation("ServiceOrderProduct")

  @@map("products")

}

model Maintenance {
  id            String @id @default(cuid())
  repair        String
  amount         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orders        ServiceOrder[] @relation("ServiceOrderService")

  @@map("maintenances")

}

model ServiceOrder {
  id              String        @id @default(cuid())
  customerId      String        @map("customer_id")
  mechanicId      String        @map("mechanic_id")
  products        Product[]     @relation("ServiceOrderProduct")
  services        Maintenance[] @relation("ServiceOrderService")
  defect          String
  totalAmount     Float         @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("service_orders")
}



